@model IEnumerable<BookAuthor>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Author List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="BookAuthor" asp-action="Create" class="btn btn-primary">
                Create
            </a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Author Serial</th>
                <th>Phone</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td width="5%">
                        @i
                    </td>
                    @{
                        i++;
                    }
                    <td>@item.Name</td>
                    <td>@item.AuthorSerialId</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td width="20%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="BookAuthor" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="BookAuthor" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


