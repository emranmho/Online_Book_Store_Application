@model IEnumerable<Book>

<div class="row pb-3">
    @foreach(var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card">
                        <img src="@item.ImageUrl" class="card-img-top rounded" style=" min-height: 200px;max-height: 200px;" />

                        <div class="card-body" style="min-height: 170px; max-height: 100px">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@item.Title</p>
                                <p class="card-title text-info">by <b>@item.BookAuthor.Name</b></p>
                            </div>
                            @if (item.Price == item.PriceAfterDiscount)
                            {
                                <div class="pl-1">
                                    <p>Price: <b>@item.Price.ToString("0.00") ৳</b></p>
                                </div>
                            }
                            else
                            {
                                <div class="pl-1">
                                    <p>Price: <strike><b>@item.Price.ToString("0.00") ৳</b></strike></p>
                                </div>
                                <div class="pl-1">
                                    <p>Discount Price: <b>@item.PriceAfterDiscount ৳</b></p>
                                </div>
                            }
                        </div>
                                           
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-bookId="@item.Id">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
